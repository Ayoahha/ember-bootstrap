{{bs-button active=active toggle=true type="primary" icon="glyphicon glyphicon-download" defaultText="Default" loadingText="Loading"}}

<hr>

<h2>Button group</h2>

{{#bs-button-group value=buttonGroupValue type="checkbox" onChange=(action (mut buttonGroupValue)) as |bg|}}
    {{#bg.button type="default" value=1}}1{{/bg.button}}
    {{#bg.button type="default" value=2}}2{{/bg.button}}
    {{#bg.button type="default" value=3}}3{{/bg.button}}
{{/bs-button-group}}

<p>You selected:</p>
<ul>
    {{#each buttonGroupValue as |value|}}
        <li>{{value}}</li>
    {{/each}}
</ul>


<h3>Radio-style button group</h3>

{{#bs-button-group value=buttonGroupValue2 type="radio" onChange=(action (mut buttonGroupValue2)) as |bg|}}
    {{#bg.button type="default" value=1}}1{{/bg.button}}
    {{#bg.button type="default" value=2}}2{{/bg.button}}
    {{#bg.button type="default" value=3}}3{{/bg.button}}
{{/bs-button-group}}

<p>You selected: {{buttonGroupValue2}}</p>