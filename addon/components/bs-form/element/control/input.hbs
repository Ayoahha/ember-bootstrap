<input
  type={{this.type}}
  id={{@id}}
  disabled={{this.disabled}}
  readonly={{this.readonly}}
  aria-describedby={{this.ariaDescribedBy}}
  value={{this.value}}
  class="form-control {{this.formValidationClass}} {{this.sizeClass}}"
  ...attributes
  {{on "change" this.handleChange}}
  {{on "input" this.handleInput}}
>