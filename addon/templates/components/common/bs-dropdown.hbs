{{yield
  (hash
    button=(component this.buttonComponent dropdown=this isOpen=this.isOpen onClick=this.toggleDropdown)
    toggle=(component this.toggleComponent dropdown=this isOpen=this.isOpen inNav=inNav onClick=this.toggleDropdown)
    menu=(component this.menuComponent
      isOpen=this.isOpen
      direction=this.direction
      inNav=@inNav
      toggleElement=this.toggleElement
      dropdownElementId=this.elementId
      onKeyDown=this.handleKeyEvent
    )
    toggleDropdown=this.toggleDropdown
    openDropdown=this.openDropdown
    closeDropdown=this.closeDropdown
    isOpen=this.isOpen
  )
}}
{{#if this.isOpen}}
  {{on-document "click" this.closeHandler capture=true}}
  {{on-document "keyup" this.closeHandler}}
{{/if}}
