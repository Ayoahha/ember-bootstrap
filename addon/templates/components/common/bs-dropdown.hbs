{{yield
  (hash
    button=(component this.buttonComponent dropdown=this onClick=this.toggleDropdown)
    toggle=(component this.toggleComponent dropdown=this inNav=inNav onClick=this.toggleDropdown)
    menu=(component this.menuComponent
      isOpen=this.isOpen
      direction=this.direction
      inNav=@inNav
      toggleElement=this.toggleElement
      dropdownElementId=this.elementId
    )
    toggleDropdown=this.toggleDropdown
    openDropdown=this.openDropdown
    closeDropdown=this.closeDropdown
    isOpen=this.isOpen
  )
}}
